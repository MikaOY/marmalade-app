<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:local="clr-namespace:ProjectMarmalade"
		x:Class="ProjectMarmalade.SenderInfoPage">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="Button">
				<Setter Property="FontSize" Value="Large" />
				<Setter Property="HorizontalOptions" Value="FillAndExpand" />
			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>

	<!--Visual content-->
	<ScrollView>
		<StackLayout Spacing="30" Padding="30" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
			<Button x:Name="loadProfileButton" Text="Load profile" />

			<local:InfoField x:Name="fullNameField" FieldLabel="Full Name" 
				Placeholder="Enter your full name here" 
				ValidationBehavior="{local:DescriptionValidBehavior}"/>

			<local:InfoField x:Name="ICField" FieldLabel="Identification Card (IC) Number" 
				Placeholder="Enter your IC number here" 
				ValidationBehavior="{local:ICValidBehavior}"/>

			<local:InfoField x:Name="phoneNumberField" FieldLabel="Telephone Number" 
				Placeholder="Enter your phone number (on IC) here" 
				ValidationBehavior="{local:ICValidBehavior}"/>

			<local:InfoField x:Name="addressField" FieldLabel="Home Address" 
				Placeholder="Enter your address (on IC) here" 
				ValidationBehavior="{local:AddressValidBehavior}"/>

			<local:InfoField x:Name="emailField" FieldLabel="Email Address" 
				Placeholder="Enter your email address here" 
				ValidationBehavior="{local:PhoneNumberValidBehavior}"/>

			<Button x:Name="toConfirmationPageButton" Text="Complete information above to proceed" FontSize="Large" 
					Clicked="OnNextClicked" IsEnabled="false" HorizontalOptions="FillAndExpand" >
				<Button.Triggers>
					<MultiTrigger TargetType="Button">
						
						<MultiTrigger.Conditions>
							<BindingCondition Binding="{Binding Source={x:Reference fullNameField}, Path=InfoIsValid}"
									Value="True" />
							<BindingCondition Binding="{Binding Source={x:Reference phoneNumberField}, Path=InfoIsValid}"
									Value="True" />
							<BindingCondition Binding="{Binding Source={x:Reference addressField}, Path=InfoIsValid}"
									Value="True" />
							<BindingCondition Binding="{Binding Source={x:Reference emailField}, Path=InfoIsValid}"
									Value="True" />
						</MultiTrigger.Conditions>

						<Setter Property="IsEnabled" Value="True" />
						<Setter Property="Text" Value="Next" />
						<Setter Property="FontSize" Value="Large" />
					</MultiTrigger>
				</Button.Triggers>
			</Button>

		</StackLayout>
	</ScrollView>

</ContentPage>
